<div class="cart-item">
    <a @onclick="@OnRemoved" class="delete-item">X</a>
    <div class="title">@(Pizza.Size) cm @Pizza.Special.Name</div>
    <ul>
        @foreach (var topping in Pizza.Toppings)
        {
            <li>+ @topping.Topping.Name</li>
        }
    </ul>
    <div class="item-price">
        @Pizza.GetFormattedTotalPrice()
    </div>
</div>

@code {
    //Almacena pizza configurada
    [Parameter]
    public Pizza Pizza { get; set; }
    
    //Elimina pizza de la orden
    [Parameter]
    public EventCallback OnRemoved { get; set; }

}
